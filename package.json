{
  "name": "role-based-crud",
  "version": "1.0.0",
  "description": "Role-Based Authentication System with CRUD operations",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:prod": "node dist/database/migrate.js",
    "postinstall": "npm run build"
  },
  "keywords": ["express", "typescript", "postgresql", "authentication", "rbac"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18 <23"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/express-session": "^1.17.7",
    "@types/connect-pg-simple": "^4.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}

